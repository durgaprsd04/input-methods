 (dependent
  ("@" (delete @-) "")
  ("#" (delete @-) "")
  ("~M" (delete @-) "")
  ("a" (delete @-) "")
  ("aa" (delete @-) "ാ")
  ("A" (delete @-) "ാ")
  ("i" (delete @-) "ി")
  ("I" (delete @-) "ീ")
